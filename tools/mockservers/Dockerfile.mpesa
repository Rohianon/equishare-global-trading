FROM golang:1.22-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY mpesa/ ./mpesa/

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -o /mpesa-mock ./mpesa

# Runtime image
FROM alpine:3.19

RUN apk --no-cache add wget ca-certificates

COPY --from=builder /mpesa-mock /mpesa-mock

EXPOSE 8090

CMD ["/mpesa-mock"]
